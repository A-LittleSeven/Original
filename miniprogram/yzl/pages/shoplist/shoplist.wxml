<view>
  <view class="scroll-bg-color" wx:if="{{tabs.length > 0}}">
    <wxc-tab
      bind:tabchange="onClick"
      default-index="{{2}}"
      component-id="c2"
      animate="{{true}}"
      text-color="#1a1a1a"
      active-text-color="#63d8f2"
      active-line-color="#63d8f2"
      class="tab-font"
    >
      <wxc-tab-panel
        wx:for="{{tabs}}"
        wx:for-item="tab"
        wx:key="{{tab.content}}"
        tab-index="{{index}}"
        component-id="c2"
        label="{{tab.title}}"
      >
        <!-- content -->
        <view>
          <image src="http://140.143.8.19/code-repo/PHP/lixshop/backend/web/uploads/temp/78145dcf5ea44b0b89afc2f3392445a3.jpg" />
          
        </view>
      </wxc-tab-panel>

    </wxc-tab>
  </view>
</view>
