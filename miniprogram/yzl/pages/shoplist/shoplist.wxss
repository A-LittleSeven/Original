.tab-font {
  font-size: 15px;
}

.shop-container {
  text-align: center;
}

.shop-content {
  position: relative;
  height: 150px;
}

.shop-border {
  border-right: 1rpx solid #eaebf3;
  border-bottom: 1rpx solid #eaebf3;
}

.shop-img {
  padding-top: 13px;
  width: 60px;
  height: 65px;
}

.shop-badge {
  position: absolute;
  top: 30rpx;
  right: 16rpx;
}

.shop-title {
  margin-top: 12rpx;
  font-size: 14px;
  color: #1a1a1a;
}

.shop-price {
  margin-top: 10rpx;
  font-size: 12px;
  color: #dd4037;
}

.float-button {
  position: fixed;
  height: 58px;
  width: 100%;
  bottom: 0;
  background-color: rgba(112, 223, 244, 1);
}

.float-button > button {
  height: 100%;
  width: 100%;
  background-color: rgba(112, 223, 244, 1);
}
