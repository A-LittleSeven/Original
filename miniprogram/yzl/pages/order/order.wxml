<view>
  <!-- 有订单的情况 -->
	<view class="bg-white">
    <wxc-tab
        bind:tabchange="onClick"
        default-index="{{0}}"
        component-id="c4"
				animate="{{true}}"
				text-color="#666666"
      	active-text-color="#63d8f2"
      	active-line-color="#63d8f2"
				class="font-15"
      >
      <wxc-tab-panel
        wx:for="{{tabs}}"
        wx:for-item="tab"
        wx:key="{{tab.content}}"
        tab-index="{{index}}"
        component-id="c4"
        label="{{tab.title}}"
      >
				<!-- 没有订单的异常流 展示 -->
				<view class="bg-f0">
					<wxc-abnor type="ORDER"></wxc-abnor>
				</view>
      </wxc-tab-panel>
    </wxc-tab>
  </view>
</view>

