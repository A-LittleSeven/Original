}

.bottom-img-wrapper {
  height: 34px;
  width: 34px;
  border: solid 1px #6a6f79;
  border-radius: 7px;
  text-align: center;
  margin: 0 auto;
}

.bottom-icon-title {
  margin-top: 7px;
  font-size: 12px;
  color: #6a6f79;
  text-align: center;
  margin-bottom: 20px;
