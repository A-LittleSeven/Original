.category-col {
  height: 152px;
  border-right-style:solid;
  border-width: 1px;
  border-right-color: #dcdcdc;
}

.category-col-hot {
  height: 263px;
  border-right-style:solid;
  border-width: 1px;
  border-right-color: #dcdcdc;
}

.category-bg-1 {
  background-color: #fbfdff;
}

.category-bg-2 {
  background-color: #fffdfd;
}

.category-bg-3 {
  background-color: #fbffff;
}

.category-bg-4 {
  background-color: #ffffff;
}

.category-title-margin {
  position: relative;
  padding-top: 14px;
}

.category-title {
  font-size: 15px;
  color: #1a1a1a;
}

.category-img {
  height: 85px;
  width: 60%;
  margin: 0 auto;
  padding-top: 11px;
}

.icon-img-hot {
  height: 126px;
  width: 50%;
  margin: 0 auto;
  padding-top: 20px;
}

.real-price {
  color: #545962;
  font-size: 10px;
}

.old-price {
  color: #bcc1cb;
  font-size: 10px;
  margin-left: 3px;
  text-decoration: line-through;
}

.product-title {
  color: #bcc1cb;
  font-size: 13px;
  margin-top: 10px;
}

.sale-btn {
  font-size: 11px;
  width: 64px;
  border: solid 1px #f19c9a;
  color: #f19c9a;
  border-radius: 16px;
  background-color: #ffffff;
}

 .btn-view {
  height: 20px;
  width: 100%;
  margin-top: 10px;
}

.bottom-icon-layout {
  margin-top: 22px;
  height: 74px;
}

.bottom-icon-img {
  position: relative;
  padding-top: 7px;
