<view class="">
  <view class="txt">
    <text>当前余额：{{nowCharge}}</text>
  </view>
  <view class="input-wrap">
    <wxc-input type="number" mode="wrapped" right="{{true}}" error="{{true}}" title="补差价金额" placeholder="询问收银员后输入" bind:input="priceInput"></wxc-input>
  </view>
  <view class="button-large-wrap"></view>
  <wxc-cc>
    <view bindtap="submit">
      <wxc-button size="large" type="success" loading="{{loading}}" value="提交"></wxc-button>
    </view>
  </wxc-cc>
</view>

