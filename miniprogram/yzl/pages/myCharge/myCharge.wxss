}

.btn-view {
	/* width: 190rpx; */
	height: 68rpx;
	margin-top: 20rpx;
	/* margin-bottom: 30rpx; */
}

.separate-line {
	position: absolute;
	text-align: center;
	width: 100%;
}

.separate-line view {
	line-height: 20px;
}

.separate-line view::after, .separate-line view::before {
	position: absolute;
	top: 50%;
	background: #ddd;
	content: "";
	height: 1px;
	width: 45%;
}

.separate-line view::before {
	left: 0;
}


.separate-line view::after {
	right: 0;
}

