var tools = {
  valueText: function (type, value) {
    if (type == 1) {
      return '-' + value
    } else if (type == 2) {
      return '+' + value
    }
    return value
  },
  titleText: function (type) {
    if (type == 1) {
      return '洗衣消费'
    } else if (type == 2) {
      return '微信充值'
    }
  },
  discountText: function (discount) {
    return discount / 10
  }
}

module.exports = {
  valueText: tools.valueText,
  titleText: tools.titleText,
  discountText: tools.discountText,
}

